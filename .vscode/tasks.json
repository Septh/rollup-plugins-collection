{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "npm",
      "script": "clean",
      "icon": {
        "id": "trash"
      },
      "presentation": {
        "reveal": "silent",
        "clear": true
      }
    },
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "typescript",
      "tsconfig": "tsconfig.build.json",
      "option": "watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "presentation": {
        "reveal": "silent",
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOn": [ "clean" ],
      "dependsOrder": "sequence"
    }
  ]
}
